fonts
{
   font: "FreeSans.ttf" "Normal";
   font: "FreeSansBold.ttf" "Bold";
   font: "FreeSansOblique.ttf" "Italic";
   font: "FreeSansBoldOblique.ttf" "BoldItalic";
}

spectra
{
	spectrum
	{
		name: "eyesight/main_window/background/black_to_grey";
		color: 100 100 100 255 0;
      color: 0 0 0 255 0;
	}
	spectrum
	{
		name: "eyesight/main_window/controls/black_to_trans";
      color: 0 0 0 30 0;
		color: 0 0 0 200 0;
	}
}

styles
{
	style
	{
		name: "error";
		base: "font=VeraBd font_size=10 color=#FFFFFFFF wrap=word valign=middle";
		tag: "br" "+ \n";
		tag: "i" "+ \t";
	}
}

